---
// ThoughtField - Animated ASCII visualization of thoughts drifting in the mind-room
---

<div class="thought-field" aria-hidden="true">
  <div class="spiral-core">
    <pre class="spiral">╭─╮
│◦│
╰─╯</pre>
  </div>

  <div class="drift-layer">
    <span class="glyph glyph-1">·</span>
    <span class="glyph glyph-2">∘</span>
    <span class="glyph glyph-3">○</span>
    <span class="glyph glyph-4">◦</span>
    <span class="glyph glyph-5">·</span>
    <span class="glyph glyph-6">∘</span>
    <span class="glyph glyph-7">~</span>
    <span class="glyph glyph-8">·</span>
    <span class="glyph glyph-9">○</span>
    <span class="glyph glyph-10">◦</span>
    <span class="glyph glyph-11">·</span>
    <span class="glyph glyph-12">∘</span>
  </div>

  <div class="echo-rings">
    <div class="ring ring-1"></div>
    <div class="ring ring-2"></div>
    <div class="ring ring-3"></div>
  </div>
</div>

<style>
  .thought-field {
    position: relative;
    width: 100%;
    max-width: 420px;
    height: 280px;
    margin: 0 auto 2rem;
    pointer-events: none;
    overflow: hidden;
  }

  /* Animated spiral core */
  .spiral-core {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 3;
  }

  .spiral {
    margin: 0;
    font-family: var(--font-mono);
    font-size: 2.5rem;
    line-height: 1.2;
    color: var(--accent-pink);
    text-shadow:
      0 0 20px rgba(255, 62, 142, 0.4),
      0 0 40px rgba(255, 62, 142, 0.2);
    animation: spiralPulse 4s ease-in-out infinite;
    filter: blur(0.3px);
  }

  @keyframes spiralPulse {
    0%, 100% {
      opacity: 0.6;
      transform: scale(1) rotate(0deg);
      filter: blur(0.3px);
    }
    50% {
      opacity: 0.9;
      transform: scale(1.08) rotate(5deg);
      filter: blur(0px);
    }
  }

  /* Echo rings */
  .echo-rings {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
  }

  .ring {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 1px solid var(--accent-pink);
    border-radius: 50%;
    opacity: 0;
  }

  .ring-1 {
    animation: echoRing 6s ease-out infinite;
    animation-delay: 0s;
  }

  .ring-2 {
    animation: echoRing 6s ease-out infinite;
    animation-delay: 2s;
  }

  .ring-3 {
    animation: echoRing 6s ease-out infinite;
    animation-delay: 4s;
  }

  @keyframes echoRing {
    0% {
      width: 40px;
      height: 40px;
      opacity: 0.4;
    }
    100% {
      width: 280px;
      height: 280px;
      opacity: 0;
    }
  }

  /* Drifting thought glyphs */
  .drift-layer {
    position: absolute;
    inset: 0;
    z-index: 2;
  }

  .glyph {
    position: absolute;
    font-family: var(--font-mono);
    color: var(--accent-rose);
    opacity: 0;
    text-shadow: 0 0 8px rgba(242, 138, 174, 0.6);
  }

  /* Individual glyph animations - each has unique path */
  .glyph-1 {
    font-size: 1rem;
    top: 20%;
    left: 15%;
    animation: drift1 18s ease-in-out infinite;
  }

  .glyph-2 {
    font-size: 0.8rem;
    top: 15%;
    left: 70%;
    animation: drift2 22s ease-in-out infinite;
  }

  .glyph-3 {
    font-size: 1.2rem;
    top: 60%;
    left: 80%;
    animation: drift3 20s ease-in-out infinite;
  }

  .glyph-4 {
    font-size: 0.7rem;
    top: 75%;
    left: 25%;
    animation: drift4 24s ease-in-out infinite;
  }

  .glyph-5 {
    font-size: 0.9rem;
    top: 35%;
    left: 10%;
    animation: drift5 19s ease-in-out infinite;
  }

  .glyph-6 {
    font-size: 1.1rem;
    top: 45%;
    left: 85%;
    animation: drift6 21s ease-in-out infinite;
  }

  .glyph-7 {
    font-size: 1.3rem;
    top: 25%;
    left: 50%;
    animation: drift7 17s ease-in-out infinite;
  }

  .glyph-8 {
    font-size: 0.75rem;
    top: 70%;
    left: 60%;
    animation: drift8 23s ease-in-out infinite;
  }

  .glyph-9 {
    font-size: 1rem;
    top: 50%;
    left: 20%;
    animation: drift9 25s ease-in-out infinite;
  }

  .glyph-10 {
    font-size: 0.85rem;
    top: 10%;
    left: 40%;
    animation: drift10 20s ease-in-out infinite;
  }

  .glyph-11 {
    font-size: 0.95rem;
    top: 80%;
    left: 45%;
    animation: drift11 22s ease-in-out infinite;
  }

  .glyph-12 {
    font-size: 1.15rem;
    top: 30%;
    left: 75%;
    animation: drift12 19s ease-in-out infinite;
  }

  /* Drift keyframes - organic, slow floating movements */
  @keyframes drift1 {
    0%, 100% {
      transform: translate(0, 0);
      opacity: 0;
    }
    10% { opacity: 0.3; }
    50% {
      transform: translate(-15px, 20px);
      opacity: 0.6;
    }
    90% { opacity: 0.2; }
  }

  @keyframes drift2 {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg);
      opacity: 0;
    }
    15% { opacity: 0.4; }
    50% {
      transform: translate(10px, -25px) rotate(10deg);
      opacity: 0.5;
    }
    85% { opacity: 0.1; }
  }

  @keyframes drift3 {
    0%, 100% {
      transform: translate(0, 0);
      opacity: 0;
    }
    20% { opacity: 0.5; }
    50% {
      transform: translate(-20px, -15px);
      opacity: 0.7;
    }
    80% { opacity: 0.2; }
  }

  @keyframes drift4 {
    0%, 100% {
      transform: translate(0, 0);
      opacity: 0;
    }
    12% { opacity: 0.35; }
    50% {
      transform: translate(18px, 12px);
      opacity: 0.55;
    }
    88% { opacity: 0.15; }
  }

  @keyframes drift5 {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg);
      opacity: 0;
    }
    18% { opacity: 0.4; }
    50% {
      transform: translate(-12px, -18px) rotate(-8deg);
      opacity: 0.6;
    }
    82% { opacity: 0.2; }
  }

  @keyframes drift6 {
    0%, 100% {
      transform: translate(0, 0);
      opacity: 0;
    }
    14% { opacity: 0.45; }
    50% {
      transform: translate(8px, 22px);
      opacity: 0.65;
    }
    86% { opacity: 0.18; }
  }

  @keyframes drift7 {
    0%, 100% {
      transform: translate(0, 0);
      opacity: 0;
    }
    16% { opacity: 0.3; }
    50% {
      transform: translate(-25px, 10px);
      opacity: 0.5;
    }
    84% { opacity: 0.12; }
  }

  @keyframes drift8 {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg);
      opacity: 0;
    }
    22% { opacity: 0.38; }
    50% {
      transform: translate(14px, -20px) rotate(12deg);
      opacity: 0.58;
    }
    78% { opacity: 0.16; }
  }

  @keyframes drift9 {
    0%, 100% {
      transform: translate(0, 0);
      opacity: 0;
    }
    11% { opacity: 0.42; }
    50% {
      transform: translate(-18px, 16px);
      opacity: 0.62;
    }
    89% { opacity: 0.2; }
  }

  @keyframes drift10 {
    0%, 100% {
      transform: translate(0, 0);
      opacity: 0;
    }
    19% { opacity: 0.36; }
    50% {
      transform: translate(22px, -12px);
      opacity: 0.56;
    }
    81% { opacity: 0.14; }
  }

  @keyframes drift11 {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg);
      opacity: 0;
    }
    13% { opacity: 0.4; }
    50% {
      transform: translate(-10px, -24px) rotate(-6deg);
      opacity: 0.6;
    }
    87% { opacity: 0.18; }
  }

  @keyframes drift12 {
    0%, 100% {
      transform: translate(0, 0);
      opacity: 0;
    }
    17% { opacity: 0.44; }
    50% {
      transform: translate(16px, 18px);
      opacity: 0.64;
    }
    83% { opacity: 0.22; }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .thought-field {
      height: 220px;
      max-width: 320px;
    }

    .spiral {
      font-size: 2rem;
    }

    .glyph {
      font-size: 0.8rem !important;
    }

    @keyframes echoRing {
      0% {
        width: 30px;
        height: 30px;
        opacity: 0.3;
      }
      100% {
        width: 200px;
        height: 200px;
        opacity: 0;
      }
    }
  }

  /* Reduced motion accessibility */
  @media (prefers-reduced-motion: reduce) {
    .spiral,
    .glyph,
    .ring {
      animation: none !important;
    }

    .spiral {
      opacity: 0.7;
    }

    .glyph {
      opacity: 0.3;
    }
  }
</style>
