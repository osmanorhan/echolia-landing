---
import '@styles/tailwind.css';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Echolia — a quiet room for unfinished thoughts',
  description = 'Echolia is a dark, retro-futurist mind-room for capturing drifting thoughts. Desktop and mobile downloads for Windows, macOS, Linux, and mobile.',
} = Astro.props;

const siteUrl = 'https://echolia.app';
const ogImage = `${siteUrl}/og-image.png`;
---

<!doctype html>
<html lang="en" class="bg-bg-deep text-text-main">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0A0608" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@300;400;500&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Echolia" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={siteUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'WebSite',
        name: 'Echolia',
        url: siteUrl,
        potentialAction: {
          '@type': 'SearchAction',
          target: `${siteUrl}/blog?query={search_term_string}`,
          'query-input': 'required name=search_term_string',
        },
      })}
    </script>
  </head>
  <body class="relative bg-bg-deep text-text-main">
    <div class="noise-layer"></div>
    <div class="relative z-10 min-h-screen flex flex-col">
      <header class="sticky top-0 z-20 border-b border-white/5 bg-gradient-to-b from-[#110A0D]/95 to-[#0A0608]/98 backdrop-blur-xl">
        <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3 md:py-4">
          <div class="flex items-center gap-3">
            <div class="flex h-8 w-8 items-center justify-center rounded-full border border-accent-pink/20 bg-accent-pink/5">
              <div class="h-4 w-4 rounded-full border border-accent-pink/40 opacity-80" />
            </div>
            <div class="flex flex-col">
              <span class="font-mono text-xs uppercase tracking-[0.2em] text-text-muted">Echolia</span>
              <span class="text-sm text-text-main/90">a warm mind-room</span>
            </div>
          </div>
          <nav class="flex items-center gap-4 md:gap-5 text-xs md:text-sm">
            <a href="/" class="text-text-muted hover:text-text-main/90 transition">Home</a>
            <a href="/docs" class="text-text-muted hover:text-text-main/90 transition">Docs</a>
            <a href="/blog" class="text-text-muted hover:text-text-main/90 transition">Blog</a>
            <a href="/about" class="text-text-muted hover:text-text-main/90 transition hidden md:block">About</a>
            <a href="/download" class="fab-ghost hidden sm:inline-flex">
              <span>Download</span>
            </a>
          </nav>
        </div>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t border-white/5 bg-bg-deep/95">
        <div class="mx-auto max-w-6xl px-4 py-8 md:py-10">
          <!-- Footer Grid -->
          <div class="grid md:grid-cols-4 gap-8 mb-8">
            <!-- Brand -->
            <div class="md:col-span-1 space-y-3">
              <div class="flex items-center gap-2">
                <div class="flex h-6 w-6 items-center justify-center rounded-full border border-accent-pink/20 bg-accent-pink/5">
                  <div class="h-3 w-3 rounded-full border border-accent-pink/40 opacity-80" />
                </div>
                <span class="font-mono text-xs uppercase tracking-[0.2em] text-text-muted">Echolia</span>
              </div>
              <p class="text-xs text-text-muted/70 leading-relaxed">
                A warm mind-room for unfinished thoughts
              </p>
            </div>

            <!-- Product -->
            <div class="space-y-3">
              <h3 class="text-xs font-mono uppercase tracking-wider text-text-muted/60">Product</h3>
              <ul class="space-y-2 text-xs">
                <li><a href="/download" class="text-text-muted hover:text-accent-pink transition-colors">Download</a></li>
                <li><a href="/docs" class="text-text-muted hover:text-accent-pink transition-colors">Documentation</a></li>
                <li><a href="/changelog" class="text-text-muted hover:text-accent-pink transition-colors">Changelog</a></li>
                <li><a href="/sync" class="text-text-muted hover:text-accent-pink transition-colors flex items-center gap-1.5">
                  <span>Sync</span>
                  <span class="px-1.5 py-0.5 rounded bg-accent-cyan/10 border border-accent-cyan/20 text-[10px] font-mono text-accent-cyan uppercase tracking-wider">Soon</span>
                </a></li>
              </ul>
            </div>

            <!-- Company -->
            <div class="space-y-3">
              <h3 class="text-xs font-mono uppercase tracking-wider text-text-muted/60">Company</h3>
              <ul class="space-y-2 text-xs">
                <li><a href="/about" class="text-text-muted hover:text-accent-pink transition-colors">About</a></li>
                <li><a href="/blog" class="text-text-muted hover:text-accent-pink transition-colors">Blog</a></li>
                <li><a href="mailto:hello@echolia.app" class="text-text-muted hover:text-accent-pink transition-colors">Contact</a></li>
                <li><a href="https://github.com/echolia/echolia" class="text-text-muted hover:text-accent-pink transition-colors">GitHub</a></li>
              </ul>
            </div>

            <!-- Social -->
            <div class="space-y-3">
              <h3 class="text-xs font-mono uppercase tracking-wider text-text-muted/60">Follow</h3>
              <ul class="space-y-2">
                <li>
                  <a href="https://twitter.com/echolia_app" class="flex items-center gap-2 text-xs text-text-muted hover:text-accent-pink transition-colors">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                    <span>Twitter</span>
                  </a>
                </li>
                <li>
                  <a href="https://github.com/echolia/echolia" class="flex items-center gap-2 text-xs text-text-muted hover:text-accent-pink transition-colors">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
                    </svg>
                    <span>GitHub</span>
                  </a>
                </li>
                <li>
                  <a href="mailto:hello@echolia.app" class="flex items-center gap-2 text-xs text-text-muted hover:text-accent-pink transition-colors">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <span>Email</span>
                  </a>
                </li>
              </ul>
            </div>
          </div>

          <!-- Bottom Bar -->
          <div class="pt-6 border-t border-white/5 flex flex-col md:flex-row gap-3 md:items-center md:justify-between">
            <span class="text-xs font-mono text-text-muted/70">
              © {new Date().getFullYear()} Echolia. A warm space where thoughts drift and echo.
            </span>
            <div class="flex gap-4 text-xs font-mono text-text-muted/70">
              <a href="/privacy" class="hover:text-accent-pink transition-colors">Privacy</a>
              <a href="/terms" class="hover:text-accent-pink transition-colors">Terms</a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>

