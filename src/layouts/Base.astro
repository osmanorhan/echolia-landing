---
import '@styles/tailwind.css';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Echolia — a quiet room for unfinished thoughts',
  description = 'Echolia is a dark, retro-futurist mind-room for capturing drifting thoughts. Desktop and mobile downloads for Windows, macOS, Linux, and mobile.',
} = Astro.props;

const siteUrl = 'https://echolia.app';
const ogImage = `${siteUrl}/og-image.png`;
---

<!doctype html>
<html lang="en" class="bg-bg-deep text-text-main">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#070A0D" />

    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Echolia" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={siteUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'WebSite',
        name: 'Echolia',
        url: siteUrl,
        potentialAction: {
          '@type': 'SearchAction',
          target: `${siteUrl}/blog?query={search_term_string}`,
          'query-input': 'required name=search_term_string',
        },
      })}
    </script>
  </head>
  <body class="relative bg-bg-deep text-text-main">
    <div class="noise-layer"></div>
    <div class="relative z-10 min-h-screen flex flex-col">
      <header class="sticky top-0 z-20 border-b border-white/5 bg-gradient-to-b from-[#081018]/95 to-[#070A0D]/98 backdrop-blur-xl">
        <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3 md:py-4">
          <div class="flex items-center gap-3">
            <div class="flex h-8 w-8 items-center justify-center rounded-full border border-white/10 bg-white/5">
              <div class="h-4 w-4 rounded-full border border-white/40 opacity-70" />
            </div>
            <div class="flex flex-col">
              <span class="text-xs uppercase tracking-[0.2em] text-text-muted">Echolia</span>
              <span class="text-sm text-text-main/80">mind-room for unfinished thoughts</span>
            </div>
          </div>
          <nav class="flex items-center gap-4 text-xs md:text-sm">
            <a href="/" class="text-text-muted hover:text-text-main/90 transition">Runs</a>
            <a href="/blog" class="text-text-muted hover:text-text-main/90 transition">Blog</a>
            <a href="#downloads" class="fab-ghost hidden sm:inline-flex">
              <span>Get Echolia</span>
            </a>
          </nav>
        </div>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t border-white/5 bg-bg-deep/95">
        <div class="mx-auto flex max-w-6xl flex-col gap-3 px-4 py-6 text-xs text-text-muted md:flex-row md:items-center md:justify-between">
          <span>© {new Date().getFullYear()} Echolia.</span>
          <span class="opacity-75">A quiet, analog sci-fi mind-space for your thoughts.</span>
        </div>
      </footer>
    </div>
  </body>
</html>

