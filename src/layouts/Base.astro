---
import '@styles/tailwind.css';
import LogoMark from '../components/LogoMark.astro';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Echolia — a quiet room for unfinished thoughts',
  description = 'Echolia is a dark, retro-futurist mind-room for capturing drifting thoughts. Local-first desktop and mobile app for capturing drifting thoughts with on-device intelligence.',
} = Astro.props;

const siteOrigin = Astro.site?.origin ?? 'https://echolia.com';
const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : `${siteOrigin}${Astro.url.pathname}`;
const ogImage = `${siteOrigin}/og-image.png`;
---

<!doctype html>
<html lang="en" class="bg-bg-deep text-text-main">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="theme-color" content="#0A0608" />
    <meta name="robots" content="index,follow" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=IBM+Plex+Mono:wght@400;500;600&display=swap" rel="stylesheet" />

    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Echolia" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonicalUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'WebSite',
        name: 'Echolia',
        url: siteOrigin,
        potentialAction: {
          '@type': 'SearchAction',
          target: `${siteOrigin}/blog?query={search_term_string}`,
          'query-input': 'required name=search_term_string',
        },
      })}
    </script>
    <slot name="head" />
  </head>
  <body class="relative bg-bg-deep text-text-main">
    <div class="noise-layer"></div>
    <div class="grid-overlay"></div>
    <div class="halo"></div>
    <div class="relative z-10 min-h-screen flex flex-col">
      <header class="sticky top-0 z-20 border-b border-white/5 bg-gradient-to-b from-[#110A0D]/95 to-[#0A0608]/98 backdrop-blur-xl">
        <div class="flex w-full items-center justify-between px-4 sm:px-6 lg:px-8 py-3 md:py-4">
          <a href="/" class="group flex items-center gap-3 focus:outline-none focus-visible:ring-2 focus-visible:ring-accent-cyan/70 focus-visible:ring-offset-2 focus-visible:ring-offset-bg-deep rounded-full">
            <div class="relative flex h-10 w-10 items-center justify-center rounded-full border border-accent-cyan/30 bg-accent-cyan/5 shadow-[0_0_16px_rgba(125,227,218,0.28)] lg:h-11 lg:w-11 xl:h-12 xl:w-12 transition-transform duration-200 group-hover:translate-x-[1px] group-hover:-translate-y-[1px]">
              <LogoMark class="h-7 w-7 text-accent-cyan lg:h-8 lg:w-8 xl:h-9 xl:w-9" />
              <span class="pointer-events-none absolute inset-0 rounded-full bg-accent-pink/10 blur-xl" aria-hidden="true" />
            </div>
            <div class="hidden sm:flex flex-col leading-tight">
              <span class="font-mono text-[11px] uppercase tracking-[0.2em] text-text-muted">Echolia</span>
              <span class="text-[11px] sm:text-xs md:text-[13px] text-text-muted opacity-80">a warm mind-room for ...</span>
            </div>
          </a>
          <nav class="flex items-center gap-4 md:gap-5 text-xs md:text-sm">
            <a href="/" class="text-text-muted hover:text-text-main transition">Home</a>
            <a href="/docs" class="text-text-muted hover:text-text-main transition">Docs</a>
            <a href="/blog" class="text-text-muted hover:text-text-main transition">Blog</a>
            <a href="/about" class="text-text-muted hover:text-text-main transition hidden md:block">About</a>
            <a href="/download" class="fab-ghost hidden sm:inline-flex">
              <span>Download</span>
            </a>
          </nav>
        </div>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t border-white/5 bg-bg-deep/95">
        <div class="mx-auto max-w-6xl px-4 py-8 md:py-10">
          <!-- Footer Grid -->
          <div class="grid md:grid-cols-4 gap-8 mb-8">
            <!-- Brand -->
            <div class="md:col-span-1 space-y-3">
              <div class="flex items-center gap-2">
                <div class="flex h-8 w-8 items-center justify-center rounded-full border border-accent-cyan/20 bg-accent-cyan/5 shadow-[0_0_12px_rgba(125,227,218,0.22)]">
                  <LogoMark class="h-5 w-5 text-accent-cyan" />
                </div>
                <span class="font-mono text-xs uppercase tracking-[0.2em] text-text-muted">Echolia</span>
              </div>
              <p class="text-xs text-text-muted opacity-70 leading-relaxed">
                A warm mind-room for unfinished thoughts
              </p>
            </div>

            <!-- Product -->
            <div class="space-y-3">
              <h3 class="text-xs font-mono uppercase tracking-wider text-text-muted opacity-60">Product</h3>
              <ul class="space-y-2 text-xs">
                <li><a href="/download" class="text-text-muted hover:text-accent-pink transition-colors">Download</a></li>
                <li><a href="/docs" class="text-text-muted hover:text-accent-pink transition-colors">Documentation</a></li>
                <li><a href="/changelog" class="text-text-muted hover:text-accent-pink transition-colors">Changelog</a></li>
                <li><a href="/sync" class="text-text-muted hover:text-accent-pink transition-colors flex items-center gap-1.5">
                  <span>Sync</span>
                  <span class="px-1.5 py-0.5 rounded bg-accent-cyan/10 border border-accent-cyan/20 text-[10px] font-mono text-accent-cyan uppercase tracking-wider">Soon</span>
                </a></li>
              </ul>
            </div>

            <!-- Company -->
            <div class="space-y-3">
              <h3 class="text-xs font-mono uppercase tracking-wider text-text-muted opacity-60">WE</h3>
              <ul class="space-y-2 text-xs">
                <li><a href="/about" class="text-text-muted hover:text-accent-pink transition-colors">About</a></li>
                <li><a href="/blog" class="text-text-muted hover:text-accent-pink transition-colors">Blog</a></li>
                <li><a href="mailto:ping@echolia.com" class="text-text-muted hover:text-accent-pink transition-colors">Contact</a></li>
              </ul>
            </div>

            <!-- Social -->
            <div class="space-y-3">
              <h3 class="text-xs font-mono uppercase tracking-wider text-text-muted opacity-60">Follow</h3>
              <ul class="space-y-2">
                <li>
                  <a href="https://x.com/echoliaX" class="flex items-center gap-2 text-xs text-text-muted hover:text-accent-pink transition-colors">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                    <span>Twitter</span>
                  </a>
                </li>

                <li>
                  <a href="mailto:ping@echolia.com" class="flex items-center gap-2 text-xs text-text-muted hover:text-accent-pink transition-colors">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <span>Email</span>
                  </a>
                </li>
              </ul>
            </div>
          </div>

          <!-- Bottom Bar -->
          <div class="pt-6 border-t border-white/5 flex flex-col md:flex-row gap-3 md:items-center md:justify-between">
            <span class="text-xs font-mono text-text-muted opacity-70">
              © {new Date().getFullYear()} Echolia. A warm space where thoughts drift and echo.
            </span>
            <div class="flex gap-4 text-xs font-mono text-text-muted opacity-70">
              <a href="/privacy" class="hover:text-accent-pink transition-colors">Privacy</a>
              <a href="/terms" class="hover:text-accent-pink transition-colors">Terms</a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
