---
import Base from '@layouts/Base.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).filter((p) => !p.data.draft).sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
---

<Base title="Echolia Blog â€” echoes from the mind-room" description="Slow, analog notes from the Echolia lab: design logs, release notes, and thoughts on quiet AI interfaces.">
  <section class="mx-auto max-w-3xl px-4 pt-12 pb-16 md:pt-16">
    <header class="mb-8 space-y-3">
      <p class="text-xs uppercase tracking-[0.25em] text-text-muted/80">Blog</p>
      <h1 class="text-2xl md:text-3xl font-semibold text-text-main">Echoes from the lab.</h1>
      <p class="max-w-xl text-sm text-text-muted">
        Longer runs about interface philosophy, AI behavior and the strange ways thoughts echo back when you revisit them later.
      </p>
    </header>

    <div class="flex flex-col gap-4 md:gap-5">
      {posts.map((post) => (
        <article class="thought-card thought-card-hover">
          <a href={`/blog/${post.slug}/`} class="block space-y-2">
            <div class="flex items-center justify-between gap-3">
              <h2 class="text-base md:text-lg font-medium text-text-main">
                {post.data.title}
              </h2>
              <time datetime={post.data.pubDate.toISOString()} class="text-[11px] text-text-muted/80 font-mono">
                {post.data.pubDate.toISOString().slice(0, 10)}
              </time>
            </div>
            {post.data.description && (
              <p class="text-sm text-text-muted leading-relaxed">
                {post.data.description}
              </p>
            )}
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="mt-2 flex flex-wrap gap-1.5">
                {post.data.tags.map((tag) => (
                  <span class="tag-chip" data-tag={tag}>
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </a>
        </article>
      ))}
    </div>
  </section>
</Base>

